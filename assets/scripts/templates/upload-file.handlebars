<article>
  <div class="upload-file">
    <form id="create-document-form" method="post" enctype="multipart/form-data">
      <fieldset>
        <legend>Create Doc</legend>
        <label>
        Title
        <input type="text" name="doc[title]">
      </label>
        <label>
        Category
        <select id="select-category" name="doc[category]">
          <option value="" selected disabled>Select a Category...</option>
        </select>
      </label>
        <label>
        <input type="file" name="doc[file]">
      </label>
        <input type="submit" name="submit" value="Create">
      </fieldset>
    </form>
  </div>
</article>
