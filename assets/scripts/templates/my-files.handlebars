<aside>{{> user-message}}</aside>
<article>
  <div>
    <table class="file-table-one">
      <tr>
        <th>File Name</th>
        <th>Category</th>
        <th>Date Created</th>
        <th>Date Modified</th>
        <th>Download</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      {{#each docs as |doc|}}
        <tr>
          <td><input type="text" name="doc[title]" value="{{doc.title}}"></td>
          <td>{{doc.category}}</td>
          <td>{{doc.createdAt}}</td>
          <td>{{doc.updatedAt}}</td>
          <td>
            <button class="download-btn btn btn-primary btn-lg" id="download-{{doc._id}}" type="button">
              <span class="glyphicon glyphicon-download-alt"></span>
            </button>
          </td>
          <td>
            <a href="#">
            <button class="update-btn btn btn-primary btn-lg" id="update-{{doc._id}}" type="button">
                <span class="glyphicon glyphicon-pencil"></span>
              </button>
            </a>
          </td>
          <td>
            <a href="#">
              <form id="delete-doc-button">
                <button id="delete-{{doc._id}}" type="button" class="delete-btn btn-primary btn-lg">
                  <span class="glyphicon glyphicon-trash"></span>
                </button>
              </form>
            </a>
          </td>
        </tr>
      {{/each}}
    </table>
  </div>
</article>
